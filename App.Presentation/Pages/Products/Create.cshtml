@page
@model App.UI.Pages.Products.CreateModel
@{
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Create New Product</h1>
                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Products</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Add New Product</li>
                    </ol>
                </nav>
                <div class="separator mb-5"></div>
            </div>

            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <form id="exampleForm" class="tooltip-right-bottom" method="post">
                            <div class="row">
                                <div class="col-md-6 col-lg-6">
                                    <div class="form-group has-top-label">
                                        <label>UrlName</label>
                                        <input type="text" class="form-control"
                                               asp-for="CreateProductCommand.UrlName" />
                                        <span asp-validation-for="CreateProductCommand.UrlName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6">
                                    <div class="form-group has-top-label">
                                        <label>Price</label>
                                        <input type="number" step="0.0001" class="form-control"
                                               asp-for="CreateProductCommand.Price" />
                                        <span asp-validation-for="CreateProductCommand.Price" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary mb-0">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts{
    <script src="/js/vendor/select2.full.js"></script>
    <script src="/js/vendor/bootstrap-datepicker.js"></script>
    <script src="/js/vendor/bootstrap-tagsinput.min.js"></script>
}