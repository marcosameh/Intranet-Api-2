@page
@model Admin.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["PageTitle"] = "Forgot your password?";
}

<h2>@ViewData["PageTitle"]</h2>

<main>
    <div class="container">
        <div class="row h-100">
            <div class="col-12 col-md-10 mx-auto my-auto">
                <div class="card auth-card">
                    <div class="position-relative image-side ">
                        <p class=" text-white h2">MAGIC IS IN THE DETAILS</p>
                        <p class="white mb-0">
                            Please use your e-mail to reset your password.
                        </p>
                    </div>
                    <div class="form-side">
                        <a href="Dashboard.Default.html">
                            <img class="mb-4" src="/logos/logo.svg" width="200" />
                        </a>
                        <h6 class="mb-4">Forgot Password</h6>
                        <form method="post">
                            <label class="form-group has-float-label mb-4">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <span>E-mail</span>
                            </label>

                            <div class="d-flex justify-content-end align-items-center">
                                <button class="btn btn-primary btn-lg btn-shadow" type="submit">RESET</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
